<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Student List App</title>
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-light bg-success">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Planka App</a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/addProduct">Add a product</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    
    <div class="container">
        <br>
        <div class="text-center"><h2>Product Details</h2></div>
        <br>
        <% if (product) { %> <!-- Check if product data exists -->
            <div>
                <p><b>Current Owner Name:</b><br> <%= product.owner_first_name %></p>
                <p><b>Product Image:</b><br> <img src = "<%= product.image %>" width="20%"></p>
                <p><b>Product Description:</b><br> <%= product.description %></p>
                <p><b>Product Price:</b><br>$ <%= product.selling_price %></p>
            </div>
        <% } else { %>
            <p>No Student found.</p>
        <% } %>
        <a href ="/">Back</a>
    </div>
    
</body>
</html>
